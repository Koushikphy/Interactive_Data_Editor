{
  "name": "interactive_data_editor",
  "version": "2.8.0",
  "main": "index.js",
  "description": "A Software to interactively edit data in a graphical manner.",
  "homepage": "https://github.com/Koushikphy/Interactive-Data-Editor",
  "author": "Koushik Naskar <koushik.naskar9@gmail.com>",
  "copyright": "Copyright Â© April,2020 Koushik Naskar",
  "license": "MIT",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "gulp all && electron .",
    "startwatch": "gulp && electron . | gulp watch",
    "dist": "gulp all && electron-builder",
    "watch": "gulp watch",
    "uplib": "gulp default"
  },
  "build": {
    "appId": "com.ide.app",
    "productName": "Interactive Data Editor",
    "asar": true,
    "files": [
      "!src",
      "!gulpFile.js",
      "!**/node_modules/*/{LICENSE,LICENSE.md,License,AUTHORS,CHANGES.md}"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "differentialPackage": true,
      "displayLanguageSelector": true
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "desktop": {
        "Encoding": "UTF-8"
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ]
    }
  },
  "devDependencies": {
    "electron": "^8.2.1",
    "electron-builder": "^22.4.1",
    "gulp": "^4.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "plotly.js-gl3d-dist": "^1.53.0",
    "request": "^2.88.2",
    "v8-compile-cache": "^2.1.0"
  }
}
