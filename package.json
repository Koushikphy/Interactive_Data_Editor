{
  "name": "Interactive_Data_Editor",
  "version": "1.2.0",
  "main": "index.js",
  "description": "A Software to interactively edit data in a graphical manner.",
  "homepage": "https://github.com/Koushikphy/Interactive-Data-Editor",
  "author": "Koushik Naskar <koushik.naskar9@gmail.com>",
  "copyright": "Copyright Â© Dec,2018 Koushik Naskar",
  "license": "MIT",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "dist": "build"
  },
  "build": {
    "appId": "com.ide.app",
    "productName": "Interactive Data Editor",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "desktop": {
        "Encoding": "UTF-8"
      }
    },
    "win": {
      "target": "msi"
    }
  },
  "files": [
    "**/*",
    "build/icon.*"
  ],
  "devDependencies": {
    "electron": "^4.0.0",
    "electron-builder": "^20.38.4",
    "request": "^2.88.0"
  }
}
